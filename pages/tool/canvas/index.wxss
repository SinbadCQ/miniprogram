/* pages/markPapers/index.wxss */

.mark-papers {
    position: fixed;
    display: flex;
    /*垂直布局*/
    flex-flow: column;
    width: 100%;
    height: 100%;
    background: #ebf0f5;
}

.c-container {
    width: 100%;
    background: #ddd;
    flex: 1;
}

.footer {
    width: 100%;
    height: 240rpx;
    background: #fff;
}

.score-scroll {
    position: relative;
    display: inline-block;
    width: 100%;
    height: 120rpx;
    white-space: nowrap;
}

.score-scroll .wrap {
    position: absolute;
    top: 14rpx;
    width: fit-content;
}

.score-scroll .btn {
    display: inline-block;
    width: 83rpx;
    height: 93rpx;
    margin-right: 5px;
    font-size: 36rpx;
    line-height: 93rpx;
    color: #1D2023;
    text-align: center;
    border: 1px solid #C4C8CC;
    border-radius: 8rpx;
    box-sizing: border-box;
}

.score-scroll .btn:first-child {
    margin-left: 24rpx;
}